<% lists.each do |list| %>
  <div class="col-md-3 col-sm-12 list-block" data-listid="<%= list.id %>">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title title">
          <a href="#" class="name-editable" data-type="text" data-http="put"
            data-url="<%= board_list_path(board, list) %>" data-name="name">
              <%= list.name %>
          </a>
        </h4>

        <div class="heading-elements">
          <ul class="list-inline mb-0">
            <li>
              <%= link_to board_list_path(board, list), method: :delete, remote: true, class: 'list-delete' do %>
                <i data-feather="x"></i>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
      <div class="card-content collapse show">
        <%= render partial: 'card_blocks', locals: { board: board, list: list, cards: list.cards } %>

        <div class="card-footer">
          <a href="#" class="card-post create-card-editable" data-type="text" data-value=""
            data-url="<%= board_list_cards_path(board, list) %>" data-name="text">
              <i data-feather="plus"></i> Add a card
          </a>
        </div>

      </div>
    </div>
  </div>
<% end %>
